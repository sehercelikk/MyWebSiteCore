@model Project
@{
    ViewData["Title"] = "AddProject";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


    <div class="card shadow p-5" style="width: 100%; border: none; border-radius: 0;">
        <h4 class="text-center mb-4 text-primary">Proje Ekle</h4>
        <form method="post" class="w-75 mx-auto">
            <div class="form-group mb-3 row align-items-center">
                <label class="col-sm-2 col-form-label text-primary" style="font-size: 21px; font-weight: bold; text-align: end">Proje Adı</label>
                <div class="col-sm-9">
                <input type="text" asp-for="Name" class="form-control form-control-lg" required />

                </div>
            </div>
            <div class="form-group mb-3 row align-items-center">
                <label class="col-sm-2 col-form-label text-primary" style="font-size: 21px; font-weight: bold; text-align: end">Açıklama</label>
                <div class="col-sm-9">
                <textarea asp-for="Description"
                          class="form-control form-control-lg"
                          rows="4"
                          style="resize: vertical;" required></textarea>

                </div>
            </div>
            <div class="form-group mb-3 row align-items-center">
                <label class="col-sm-2 col-form-label text-primary" style="font-size: 21px; font-weight: bold; text-align: end">Link</label>
                <div class="col-sm-9">
                <input type="text" asp-for="Link" class="form-control form-control-lg" required />
                </div>
            </div>

            <div class="text-center">
            <button type="submit" class="btn btn-primary w-50">Ekle</button>

            </div>
        </form>
    </div>


