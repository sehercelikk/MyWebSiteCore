@model Sertificate

@{
    ViewData["Title"] = "UpdateSertificate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="card shadow p-5" style="width: 100%; border: none; border-radius: 0;">
    <h4 class="text-center mb-4 text-primary">Sertifika Güncelle</h4>

    <form method="post" class="w-75 mx-auto">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mb-3 row align-items-center">
            <label class="col-sm-2 col-form-label text-primary" style="font-size: 21px; font-weight: bold; text-align: end">Sertifika Adı</label>
            <div class="col-sm-9">
                <input type="text" asp-for="SertificateName" class="form-control form-control-lg" required />

            </div>
        </div>
        <div class="form-group mb-3 row align-items-center">
            <label class="col-sm-2 col-form-label text-primary" style="font-size: 21px; font-weight: bold; text-align: end">Alınan Kurum</label>
            <div class="col-sm-9">
                <input type="text" asp-for="Company" class="form-control form-control-lg" required />

            </div>
        </div>
        <div class="form-group mb-3 row align-items-center">
            <label class="col-sm-2 col-form-label text-primary" style="font-size: 21px; font-weight: bold; text-align: end">Tarih</label>
            <div class="col-sm-9">
                <input type="text" asp-for="Tarih" class="form-control form-control-lg" required />

            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary w-50">Güncelle</button>
        </div>
    </form>
</div>






