@{
    Layout = null;
}



<!doctype html>
<html class="no-js" lang="">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Hata</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">
</head>
    
<body>
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .page-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1; /* Ortadaki alan footer dışında tüm boşluğu kaplar */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        footer.footer {
            background-color: #f8f9fa;
            padding: 10px 0;
        }
    </style>
    <div class="page-container">
        <div class="content">
            <div class="p-3 text-center shadow">
                <h1 class="display-1 font-weight-bold">"HATA!"</h1>
                <h4 class="text-muted">Bu sayfaya erişim yetkiniz yok!</h4>
                <a class="btn btn-dark" asp-controller="Login" asp-action="Index" role="button">
                    <i class="fas fa-sign-in-alt mr-2"></i>
                    GİRİŞ YAP
                </a>
            </div>
        </div>

        <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                    Copyright © @DateTime.Now.Year. Tüm Hakları Saklıdır.
                </span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">
                    SEHER ÇELİK <i class="far fa-heart text-danger"></i>
                </span>
            </div>
        </footer>
    </div>

    <script src="/AdminSablon/vendors/js/vendor.bundle.base.js"></script>
    <script src="/AdminSablon/vendors/js/vendor.bundle.addons.js"></script>
    <script src="/AdminSablon/js/off-canvas.js"></script>
    <script src="/AdminSablon/js/hoverable-collapse.js"></script>
    <script src="/AdminSablon/js/misc.js"></script>
    <script src="/AdminSablon/js/settings.js"></script>
    <script src="/AdminSablon/js/todolist.js"></script>
    <script src="/AdminSablon/js/dashboard.js"></script>
</body>

</html>